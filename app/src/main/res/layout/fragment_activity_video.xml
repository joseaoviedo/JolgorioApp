<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.main.MainMenuFragment"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <View
        android:id="@+id/activity_video_banner"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/deportiva"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp"></View>


    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
        android:id="@+id/video_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:videoId="TOypSnKFHrE"/>


    <TextView
        android:id="@+id/f_video_activity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Titulo"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintTop_toTopOf="@+id/activity_video_banner"
        app:layout_constraintStart_toStartOf="@id/activity_video_banner"
        app:layout_constraintBottom_toBottomOf="@id/activity_video_banner"
        app:layout_constraintEnd_toEndOf="@id/activity_video_banner" />



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/f_activity_finish_btn"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/activity_bg_deportiva"
        android:fontFamily="@font/poppins_medium"
        android:text="Finalizar"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:iconTint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="#FFFFFF" />

</androidx.constraintlayout.widget.ConstraintLayout>