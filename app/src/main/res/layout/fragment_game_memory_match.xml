<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/artistica">


    <TextView
        android:id="@+id/textoPuntuacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:text="Puntuacion:"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="30sp" />
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/atras"
        android:backgroundTint="#3d3d3d"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/EmergencyButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf ="@id/textoPuntuacion"
        android:background="@drawable/emergency_icon"
        android:layout_marginStart="45dp"/>


    <TableLayout
        android:layout_below="@id/textoPuntuacion"
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TableRow
            android:id="@+id/table"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            >

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/boton00"
                android:layout_column="0"/>

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/boton01"
                android:layout_column="1" />

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/boton02"
                android:layout_column="2" />

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/boton03"
                android:layout_column="9" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/boton04"
                android:layout_column="0" />

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/boton05"
                android:layout_column="1" />

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/boton06"
                android:layout_column="2" />

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/boton07"
                android:layout_column="9" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/boton08"
                android:layout_column="0" />

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/boton09"
                android:layout_column="1" />

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/boton10"
                android:layout_column="2" />

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/boton11"
                android:layout_column="9" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/boton12"
                android:layout_column="0" />

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/boton13"
                android:layout_column="1" />

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/boton14"
                android:layout_column="2" />

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/boton15"
                android:layout_column="9" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/Reiniciar"
        android:layout_width="160dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Reiniciar"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>