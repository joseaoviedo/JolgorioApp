<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#1F7C81"
    tools:context=".ui.main.MainMenuFragment">

    <TextView
        android:id="@+id/PM_title0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center_horizontal"
        android:text="MenÃº Principal"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FFFF"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:layout_marginBottom="20dp"
                android:layout_below="@id/PM_title0"
                app:layout_constraintTop_toBottomOf="@+id/PM_title0"
                app:layout_constraintBottom_toBottomOf="parent"
                android:fadeScrollbars="false"
                android:scrollbarSize="10dp"
                android:scrollbarThumbVertical="@color/ScrollBar">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <Button
                        android:id="@+id/PM_button0"
                        android:layout_width="370dp"
                        android:layout_height="120dp"
                        android:drawableLeft="@drawable/activities_icon"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="left|center"
                        android:text="Actividades"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="28sp"
                        android:theme="@style/Theme.JolgorioApp.Button"
                        app:backgroundTint="#FFFF"
                        app:cornerRadius="20dp"
                        app:layout_constraintBottom_toTopOf="@+id/PM_button1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/PM_button1"
                        android:layout_width="370dp"
                        android:layout_height="120dp"
                        android:drawableLeft="@drawable/games_icon"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="left|center"
                        android:text="Juegos"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="30sp"
                        android:theme="@style/Theme.JolgorioApp.Button"
                        app:backgroundTint="#FFFF"
                        app:cornerRadius="20dp"
                        app:layout_constraintBottom_toTopOf="@+id/PM_button2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/PM_button0" />

                    <Button
                        android:id="@+id/PM_button2"
                        android:layout_width="370dp"
                        android:layout_height="120dp"
                        android:drawableLeft="@drawable/videocall_icon"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="left|center"
                        android:text="Videollamada"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="30sp"
                        android:theme="@style/Theme.JolgorioApp.Button"
                        app:backgroundTint="#FFFF"
                        app:cornerRadius="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/PM_button1" />

                    <Button
                        android:id="@+id/PM_button3"
                        android:layout_width="370dp"
                        android:layout_height="120dp"
                        android:drawableLeft="@drawable/profile_icon"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="left|center"
                        android:text="Mi Perfil"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="30sp"
                        android:theme="@style/Theme.JolgorioApp.Button"
                        app:backgroundTint="#FFFF"
                        app:cornerRadius="20dp"
                        app:layout_constraintBottom_toTopOf="@+id/PM_button4"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/PM_button2" />

                    <Button
                        android:id="@+id/PM_button4"
                        android:layout_width="370dp"
                        android:layout_height="120dp"
                        android:drawableLeft="@drawable/emergencies_icon"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="left|center"
                        android:text="Llamada Emergencia"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="29sp"
                        android:theme="@style/Theme.JolgorioApp.Button"
                        app:backgroundTint="#FFFF"
                        app:cornerRadius="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/PM_button3" />

                 </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>
</RelativeLayout>