<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.games.fragment_game_15puzzle"
    android:background="@color/artistica">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/salirJuego"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/atras"
            android:backgroundTint="#3d3d3d"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/EmergencyButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/emergency_icon"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"/>

        <TextView
            android:id="@+id/steps"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pasos: 0"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/white"
            android:layout_below="@id/salirJuego"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/time"
            android:gravity="center"
            android:text="Tiempo: 00:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/white"
            android:layout_below="@id/EmergencyButton"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="30dp"
            android:textSize="20dp"
            />
            <RelativeLayout
                android:id="@+id/group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/steps"
                android:layout_centerInParent="true"
                android:layout_marginTop="30dp"
                >
                <Button
                    android:id="@+id/button1"
                    android:tag="00"
                    android:text="1"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="10dp"
                    style="@style/ButtonGame"/>
                <Button
                    android:id="@+id/button2"
                    android:tag="01"
                    android:text="2"
                    android:layout_toEndOf="@id/button1"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="10dp"
                    style="@style/ButtonGame"/>
                <Button
                    android:id="@+id/button3"
                    android:tag="02"
                    android:text="3"
                    android:layout_toEndOf="@id/button2"
                    android:layout_alignParentTop="true"
                    style="@style/ButtonGame"
                    android:layout_marginEnd="10dp"/>
                <Button
                    android:id="@+id/button4"
                    android:tag="03"
                    android:text="4"
                    android:layout_toEndOf="@id/button3"
                    android:layout_alignParentTop="true"
                    style="@style/ButtonGame"/>
                <Button
                    android:id="@+id/button5"
                    android:tag="10"
                    android:text="5"
                    android:layout_below="@id/button1"
                    android:layout_alignParentStart="true"
                    style="@style/ButtonGame"/>
                <Button
                    android:id="@+id/button6"
                    android:tag="11"
                    android:text="6"
                    android:layout_toEndOf="@id/button1"
                    android:layout_below="@id/button1"
                    style="@style/ButtonGame"/>
                <Button
                    android:id="@+id/button7"
                    android:tag="12"
                    android:text="7"
                    android:layout_toEndOf="@id/button2"
                    android:layout_below="@id/button1"
                    style="@style/ButtonGame"/>
                <Button
                    android:id="@+id/button8"
                    android:tag="13"
                    android:text="8"
                    android:layout_toEndOf="@id/button3"
                    android:layout_below="@id/button1"
                    style="@style/ButtonGame"/>
                <Button
                    android:id="@+id/button9"
                    android:tag="20"
                    android:text="9"
                    android:layout_below="@id/button5"
                    android:layout_alignParentStart="true"
                    style="@style/ButtonGame"/>
                <Button
                    android:id="@+id/button10"
                    android:tag="21"
                    android:text="10"
                    android:layout_toEndOf="@id/button1"
                    android:layout_below="@id/button5"
                    style="@style/ButtonGame"/>
                <Button
                    android:id="@+id/button11"
                    android:tag="22"
                    android:text="11"
                    android:layout_toEndOf="@id/button2"
                    android:layout_below="@id/button5"
                    style="@style/ButtonGame"/>
                <Button
                    android:id="@+id/button12"
                    android:tag="23"
                    android:text="12"
                    android:layout_toEndOf="@id/button3"
                    android:layout_below="@id/button5"
                    style="@style/ButtonGame"/>

                <Button
                    android:id="@+id/button13"
                    android:tag="30"
                    android:text="13"
                    android:layout_below="@id/button9"
                    android:layout_alignParentStart="true"
                    style="@style/ButtonGame"/>
                <Button
                    android:id="@+id/button14"
                    android:tag="31"
                    android:text="14"
                    android:layout_toEndOf="@id/button1"
                    android:layout_below="@id/button9"
                    style="@style/ButtonGame"/>
                <Button
                    android:id="@+id/button15"
                    android:tag="32"
                    android:text="15"
                    android:layout_toEndOf="@id/button2"
                    android:layout_below="@id/button9"
                    style="@style/ButtonGame"/>
                <Button
                    android:id="@+id/button16"
                    android:tag="33"
                    android:layout_toEndOf="@id/button3"
                    android:layout_below="@id/button9"
                    style="@style/ButtonGame"/>
            </RelativeLayout>
    </RelativeLayout>
</FrameLayout>